@model Betfair.ExchangeComparison.Pages.Models.BestRunner;
@{
    var ev = @Model.ExpectedValueEachWay;
    var bgColor = ev >= 0.98 ? "bg-success" : "bg-dark";
}

<div class="border border-dark rounded text-lg text-white @bgColor m-1 p-1">
    @Model.SportsbookRunner.selectionName
    <span class="text-lime"> @Model.WinnerOddsString </span>
    <span class="text-lime">@Model.PlacePartOddsString </span>
    [<span class="text-pink">@Model.ExchangeWinBestPink.ToString("0.00")</span> :
    <span class="text-pink">@Model.ExchangePlaceBestPink.ToString("0.00")</span>]
    <span>@ev.ToString("0.00") </span>
    <small class="text-danger">@Model.Bookmaker.ToString().ToLower().Substring(0, 2) </small>
</div>
