@page
@using Betfair.ExchangeComparison.Domain.Enums;
@model Betfair.ExchangeComparison.Pages.Racing.IndexModel

@{
    ViewData["Title"] = "Test";
}

<div class="p-3 bg-dark">
    <div id="meetings-container">
        <div class="row">
            <div class="col-md-3">
                <a href="/racing" class="btn btn-warning">Refresh</a>
            </div>
            <div class="col-md-6 offset-1">
                <form method="POST">
                    <select asp-for="FormModel.Bookmaker" asp-items="@(new SelectList(Enum.GetValues<Bookmaker>()))">
                        <option>Please select one.</option>
                    </select>
                    <button class="btn btn-sm btn-warning ml-2" type="submit">Change!</button>
                </form>
            </div>
        </div>
        <div id="meetings">
            @await Html.PartialAsync("/Pages/Shared/Partials/RacingCatalogPartial.cshtml", Model.CatalogViewModel)
        </div>
        <div id="loading-meetings" class="m-3"><img src="~/spinner.gif" alt="Loading" /></div>
    </div>
</div>

<script type="text/javascript" src="~/js/test.js"></script>